@model Destination
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rota Oluşturma Sayfası</h1>

<form method="post">
    <div class="form-group">
        <label>Şehir</label>
        <input type="text" class="form-control" asp-for="City" />
    </div>
    <br />
    <div class="form-group">
        <label>Gün Gece</label>
        <input type="text" class="form-control" asp-for="DayNight" />
    </div>
    <br />
    <div class="form-group">
        <label>Fiyat</label>
        <input type="text" class="form-control" asp-for="Price" />
    </div>
    <br />
    <div class="form-group">
        <label>Ana Görsel</label>
         <input type="text" class="form-control" asp-for="Image" />
    </div>
    <br />
    <div class="form-group">
        <label>Kapasite</label>
        <input type="text" class="form-control" asp-for="Capacity" />
    </div>
    <br />
    <div class="form-group">
        <label>Kapak Görseli</label>
        <input type="text" class="form-control" asp-for="CoverImage" />
    </div>
    <br />
    <div class="form-group">
        <label>Görsel 2 </label>
        <input type="text" class="form-control" asp-for="Image2" />
    </div>
    <br />
    <div class="form-group">
        <label>Detay 1</label>
        <textarea cols="30" rows="5" class="form-control" asp-for="Details1" ></textarea>
    </div>
    <br />
    <div class="form-group">
        <label>Detay 2</label>
        <textarea cols="30" rows="5" class="form-control" asp-for="Details2" ></textarea>
    </div>
    <br />
    <button class="btn btn-outline-success">Oluştur</button>
</form>


