@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<h1>Kullanıcın Geçmiş Rezervasyonları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Rota</th>
        <th>Kişi Sayısı</th>
        <th>Tarih</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@count</td>
       @*      <td>@item.AppUser.Name @item.AppUser.Surname</td> *@
            <td>@item.Destination.City</td>
            <td>@item.PersonCount</td>
            <td>@item.ReservationDate.ToString("dd/MM/yyyy")</td>
            <td><a href="#" class="btn btn-primary">Detaylar</a></td>
        </tr>
        count++;
    }
</table>